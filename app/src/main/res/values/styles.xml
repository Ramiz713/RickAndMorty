<resources>

    <style name="RickAndMortyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:fontFamily">@font/gs_bold</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="RickAndMortyTheme.Launcher">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="Widget.RickAndMorty.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roiland_sans</item>
    </style>

    <style name="TextAppearance.CardsText">
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
